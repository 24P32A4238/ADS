class Bank:
    def __init__(self, balance):
        self.balance = balance

    def deposit(self, amt):
        self.balance += amt

    def withdraw(self, amt):
        if amt <= self.balance:
            self.balance -= amt

    def show(self):
        print(self.balance)

b = Bank(1000)
b.deposit(500)
b.withdraw(300)
b.show()
